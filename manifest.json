{
    "manifest_version" : 2,
    "name" : "ChildWebProtect",
    "version" : "1.0",
    "browser_action" : {
        "default_title" : "ChildWebProtect",
        "default_icon" : "res/img/icon.png",
        "default_popup" : "src/popup/popup_vue.html"
    },
    "background" : {
        "scripts" : ["src/background_scripts/main_script.js"],
        "persistent" : false
    },
    "options_ui" : {
        "page" : "src/popup/popup_option_page.html",
        "chrome_style" : true
    },
    "permissions" : [
        "storage",
        "tabs",
        "activeTab"
    ]
}
